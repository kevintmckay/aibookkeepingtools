{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{{- range .Site.RegularPages }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- with .Lastmod }}<lastmod>{{ .Format "2006-01-02T15:04:05Z07:00" }}</lastmod>{{ end }}
  </url>
{{- end }}
{{- range .Site.Sections }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- with .Lastmod }}<lastmod>{{ .Format "2006-01-02T15:04:05Z07:00" }}</lastmod>{{ end }}
  </url>
{{- end }}
</urlset>
